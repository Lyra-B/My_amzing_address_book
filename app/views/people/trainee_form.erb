<% form_for @person, url_for(:person, :create) do |form|%>

	  <%= form.hidden_field :first_name, value: @person.first_name%>
	  <%= form.hidden_field :last_name, value: @person.last_name%>
	  <%= form.hidden_field :phone, value: @person.phone %>
	  <%= form.hidden_field :twitter, value: @person.twitter %>
	  <%= form.hidden_field :email, value: @person.email %>
	  <%= form.hidden_field :type, value: @person.type %>

	<% field_set_tag do %>
		<%= form.label :favourite_meal %>
	  <%= form.text_field :favourite_meal %>
	<%end%>

	<% field_set_tag do %>
		<%= form.label :position %>
	  <%= form.text_field :position %>
	<%end%>

	<% field_set_tag do %>
		<%= form.label :table_tennis_ladder %>
	  <%= form.text_field :table_tennis_ladder %>
	<%end%>

	<%= form.submit "Save"%>

<%end%>